<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>RadTron</display-name>
 
    <servlet>  
        <servlet-name>directWelcome</servlet-name>  
        <servlet-class>com.servlets.Welcome_Login</servlet-class>  
    </servlet>  
  
    <servlet-mapping>  
        <servlet-name>directWelcome</servlet-name>  
        <url-pattern>/Welcome_Login</url-pattern>  
    </servlet-mapping>   
    
    <servlet>  
        <servlet-name>login</servlet-name>  
        <jsp-file>/WebContent/login.jsp</jsp-file>  
    </servlet>  
  
    <servlet-mapping>  
        <servlet-name>login</servlet-name>  
        <url-pattern>/login</url-pattern>  
    </servlet-mapping>   
    
    <servlet>  
        <servlet-name>CreateUpload</servlet-name>  
        <jsp-file>/WebContent/CreateUser_Upload.jsp</jsp-file>  
    </servlet>  
  
    <servlet-mapping>  
        <servlet-name>CreateUpload</servlet-name>  
        <url-pattern>/create_upload</url-pattern>  
    </servlet-mapping>   
    
    <welcome-file-list>  
        <welcome-file>Welcome.jsp</welcome-file>  
    </welcome-file-list> 
      
</web-app>